<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/itemCardOrganizerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="14"
                    android:paddingStart="4dp"
                    android:text="@string/brak_danych" />

                <TextView
                    android:id="@+id/itemCardOrganizerAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="14"
                    android:paddingEnd="4dp"
                    android:text="@string/brak_danych"
                    android:textAlignment="textEnd" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="144dp">

                <ImageView
                    android:id="@+id/itemCardPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorLightGrey" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/addToFavorite"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favorite_border_black_24dp"
                        android:drawablePadding="4dp"
                       />

                    <ImageView
                        android:id="@+id/openLinkToOrganizer"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_link_black_24dp"
                        android:drawablePadding="4dp" />

                    <ImageView
                        android:id="@+id/showOnMap"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_map_black_24dp"
                        android:drawablePadding="4dp" />

                    <ImageView
                        android:id="@+id/itemDeleteCard"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete_black_24dp"
                        android:drawablePadding="4dp" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemCardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/brak_danych"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:maxLength="30"/>

                <TextView
                    android:id="@+id/itemCardShortInfo"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="@string/brak_danych"
                    android:maxLength="100"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorLightGrey"
                    android:orientation="vertical"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="4dp"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/itemCardAge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_child_care_black_24dp"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:text="@string/brak_danych"
                            android:maxLength="10"/>

                        <TextView
                            android:id="@+id/itemCardCategory"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_apps_black_24dp"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:text="@string/brak_danych"
                            android:maxLength="10">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="4dp"
                        android:paddingTop="4dp"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/itemCardDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_date_range_black_24dp"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:text="@string/brak_danych"
                            android:maxLength="10"/>

                        <TextView
                            android:id="@+id/itemCardPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_credit_card_black_24dp"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:text="@string/brak_danych"
                            android:maxLength="10"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="start"
                        android:padding="4dp"
                        android:paddingStart="8sp"
                        android:paddingEnd="4dp"
                        android:text="Dodano: "
                        android:textSize="8dp">

                    </TextView>

                    <TextView
                        android:id="@+id/itemCardLongInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="start"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:text="@string/brak_danych"
                        android:textSize="8sp">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>